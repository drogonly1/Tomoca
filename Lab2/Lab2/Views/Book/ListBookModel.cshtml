@model IEnumerable<Lab2.Models.Book>

@{
    ViewBag.Title = "ListBookModel";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ListBookModel</h2>
<style>
    table{
        text-align: center;
    }
    .header p{
        text-align:center;
    }
    .header{
        background-color:forestgreen;
        color: #FFF;
    }
</style>
<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table" cellpadding="10" border="1">
    <tr class="header">
        <th>
            <p>Title</p>
        </th>
        <th>
            <p>Author</p>
        </th>
        <th>
            <p>Image Cover</p>
        </th>
        <th>
            <p>Edit</p>
        </th>
        <th>
            <p>Delete</p>
        </th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.Title)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.Author)
        </td>
        <td>
            <img src="@item.ImageCover" width="90" title="cover"/>
        </td>
        <td>
            <a href="/Book/EditBook/@item.Id" title="Edit Book">Edit</a>
        </td>
        <td>
            <a href="/Book/DeleteBook/@item.Id" title="Delete Book">Delete</a>
        </td>
    </tr>
}

</table>
